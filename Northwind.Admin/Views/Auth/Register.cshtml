@using Northwind.Admin.Models.ViewModel
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
</div>

@using (Html.BeginForm("Register", "Auth", FormMethod.Post, htmlAttributes: new { @class = "user" }))
{
    @Html.AntiForgeryToken();

    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @*@Html.LabelFor(model => model.Firstname, htmlAttributes: new { @class = "control-label" })*@
            @Html.TextBoxFor(x => x.FirstName, htmlAttributes: new { placeholder = nameof(Model.FirstName), @class = "form-control form-control-user", })
            @Html.ValidationMessageFor(x => x.FirstName, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.LastName, htmlAttributes: new { placeholder = nameof(Model.LastName), @class = "form-control form-control-user", })
            @Html.ValidationMessageFor(x => x.LastName, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.TextBoxFor(x => x.Email, htmlAttributes: new { placeholder = nameof(Model.Email), @class = "form-control form-control-user", type="email"})
        @Html.ValidationMessageFor(x => x.Email, "", htmlAttributes: new { @class = "text-danger" })
    </div>
    <div class="form-group row">
        <div class="col-sm-6 mb-3 mb-sm-0">
            @Html.TextBoxFor(x => x.Password, htmlAttributes: new { type = "password", placeholder = nameof(Model.Password), @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(x => x.Password, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.PasswordConfirm, htmlAttributes: new { type = "password", placeholder = nameof(Model.PasswordConfirm), @class = "form-control form-control-user" })
            @Html.ValidationMessageFor(x => x.PasswordConfirm, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-user btn-block">
        Register Account
    </button>
}
<hr />
<div class="text-center">
    <a class="small" href="/auth/login">Already have an account? Login!</a>
</div>

